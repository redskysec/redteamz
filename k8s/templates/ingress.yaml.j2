{% for lb in loadbalancers %}
{% for instance in s3domains %}
{% if instance.vpn and lb.name == "private" or not instance.vpn and  lb.name == "public" %}
{% for domain in instance.domains %}
---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: {{ lb.name }}-{{domain}}
  namespace: {{application_name}}-{{ env }}
  annotations:
    kubernetes.io/ingress.class: nginx
{% if instance.vpn == True  %}
    nginx.ingress.kubernetes.io/whitelist-source-range: {{vpn}} #VPN-0
{% endif %}  
    cert-manager.io/cluster-issuer: "letsencrypt-staging"
spec:
  tls:
  - hosts:
    - {{ domain }} 

    secretName: tls-{{ domain }}
  rules:
  - host: {{ domain }}

    http:
      paths:
      - backend:
          serviceName: {{ env }}-nginx-svc
          servicePort: 80

{% endfor %}          
{% endif %}
{% endfor %}
{% endfor %}

